<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(piano) -%>">
  <span class='title'>
    <%= piano.name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.pianos_piano_path(piano), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_pianos_admin_piano_path(piano), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.pianos_admin_piano_path(piano), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: piano.name)}}  ) %>
  </span>
</li>
