<%= form_for [refinery, :pianos_admin, @piano] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @piano,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :dimensions -%>
    <%= f.text_field :dimensions -%>
  </div>

  <div class='field'>
    <%= f.label :manufactured_on -%>
    <%= f.date_select :manufactured_on -%>
  </div>

  <div class='field'>
    <%= f.label :upright -%>
    <%= f.check_box :upright, :checked => @piano[:upright] -%>
  </div>

  <div class='field'>
    <%= f.label :photo -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :photo_id,
               :image => @piano.photo,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "pianos/piano" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.pianos.admin.pianos.piano'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @piano.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
