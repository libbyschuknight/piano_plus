<ul>
  <% if ::Refinery::Pianos::Admin::PianosController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.pianos_admin_pianos_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_pianos_admin_piano_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Pianos::Admin::PianosController.sortable? && ::Refinery::Pianos::Piano.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.pianos_admin_pianos_path,
                     t('.reorder', what:  "Pianos"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.pianos_admin_pianos_path,
                      t('.reorder_done', what: "Pianos"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
